<xsd:schema 
	xmlns="http://www.senanque.co.nz/madura/configuration"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:beans="http://www.springframework.org/schema/beans"
	targetNamespace="http://www.senanque.co.nz/madura/configuration"
	elementFormDefault="qualified"
	attributeFormDefault="unqualified"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	

	<xsd:import namespace="http://www.springframework.org/schema/beans"/>
	 <xsd:element name="item">
		<xsd:complexType>
			<xsd:complexContent>
				<xsd:extension base="beans:identifiedType">
					<xsd:attribute name="key" type="xsd:string"/>
				</xsd:extension> 
			</xsd:complexContent>
		</xsd:complexType>
	</xsd:element>
	 <xsd:element name="manager">
		<xsd:complexType>
			<xsd:complexContent>
				<xsd:extension base="beans:identifiedType">
					<xsd:choice minOccurs="0" maxOccurs="unbounded">
						<xsd:element name="listener" type="listenerType" minOccurs="0" maxOccurs="unbounded"/>
					</xsd:choice>
					<xsd:attribute name="source" type="xsd:string" use="required"/>
					<xsd:attribute name="reloadingStrategy" type="xsd:string"/>
				</xsd:extension> 
			</xsd:complexContent>
		</xsd:complexType>
	</xsd:element>
	<xsd:complexType name="listenerType" abstract="false">
			<xsd:attribute name="ref" type="xsd:string" use="required"/>
	</xsd:complexType>
</xsd:schema>
